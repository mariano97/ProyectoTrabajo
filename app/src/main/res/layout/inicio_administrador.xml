<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio_administrador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moviles.marioandres.proyectotrabajo.InicioAdministrador">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Seleccione Tarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <Button
                android:text="Registrar Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnPersonal"
                android:layout_marginTop="40dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:text="Registrar vehiculos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnVehiculos"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:text="Registar Empresas "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnEmpresasAmbulancias"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:text="Registrar Centros medicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btncentrosMedicos"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.Button.Borderless" />


            <Button
                android:text="Perfil "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnPerfil"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
